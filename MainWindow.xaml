<Window x:Class="ThermostatEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtual Thermostat" Height="550" Width="500"
        Background="#1e1e1e">
    <Grid>
        <Ellipse Width="400" Height="400">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#E0E0E0" Offset="0.95"/>
                    <GradientStop Color="#808080" Offset="1.0"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.5"/>
            </Ellipse.Effect>
        </Ellipse>

        <Ellipse Width="340" Height="340" Fill="Black"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="txtStatus" Text="IDLE" 
                       Foreground="Gray" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       FontWeight="SemiBold"/>

            <TextBlock x:Name="txtTargetTemp" Text="22°" 
                       Foreground="White" 
                       FontSize="90" 
                       FontWeight="Thin" 
                       HorizontalAlignment="Center"
                       Margin="0,-10,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="CURRENT: " Foreground="Gray" FontSize="14"/>
                <TextBlock x:Name="txtCurrentTemp" Text="20.0°" Foreground="White" FontSize="14" FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>

        <Button Content="-" Click="btnCooler_Click"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Width="60" Height="60" Margin="40,0,0,0"
                Background="Transparent" Foreground="Black" BorderThickness="0" FontSize="40" FontWeight="Bold"/>

        <Button Content="+" Click="btnWarmer_Click"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Width="60" Height="60" Margin="0,0,40,0"
                Background="Transparent" Foreground="Black" BorderThickness="0" FontSize="40" FontWeight="Bold"/>

        <Button x:Name="btnStart" Content="POWER ON" Click="btnStart_Click"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,30"
                Background="#333" Foreground="White" Width="120" Height="30" BorderBrush="Gray"/>

    </Grid>
</Window>